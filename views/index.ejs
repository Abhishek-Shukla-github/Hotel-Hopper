<%- include ("partials/header.ejs")%>
<div class="container">
  <h1 class="h1 text-center p-3 m-2">Hotel additions by users:-</h1>
  <div class="row">
    <% hotels.forEach((hotel)=>{ %>
    <div class="card m-3 p-3" style="width: 20rem;">
      <img
        class="card-img-top"
        id="thumbnail"
        src="<%=hotel.image%>"
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title"><%=hotel.name%></h5>
        <h6 class="card-title text-secondary">
          <%=hotel.location%>,<%= hotel.country %>
        </h6>
        <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">Know more</a>
      </div>
    </div>
    <%})%>
  </div>
</div>
<%- include ("partials/footer.ejs")%>
